doctype html
html(class="scroll-smooth")
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/output.css')
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

  body(class="min-h-screen flex flex-col bg-gray-50")
    //- Header with improved navigation
    header(class="bg-black sticky top-0 z-50 border-b border-gray-800")
      nav(class="container mx-auto px-4 py-4")
        div(class="flex flex-col md:flex-row items-center justify-between gap-4")
          //- Logo section
          div(class="flex items-center")
            h1(class="font-extrabold text-3xl bg-gradient-to-r from-white to-orange-400 text-transparent bg-clip-text") 
              a(href="/") SportPulse

          //- Main navigation
          div(class="flex items-center gap-6 text-sm font-medium")
            each item in ['Home', 'Join Us', 'Customer Care', 'Reach Out', 'About Us']
              a(
                href=item === 'Home' ? '/' : '#'
                class="text-gray-300 hover:text-white relative after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-orange-500 after:transition-all after:duration-300 hover:after:w-full"
              )= item

          //- Subscribe button
          div(class="flex items-center gap-4")
            button(
              class="bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white font-semibold px-6 py-2 rounded-full transition-all duration-300 shadow-lg hover:shadow-xl"
            ) Subscribe

    //- Main content
    main(class="flex-grow")
      block content

    //- Footer with improved layout
    footer(class="bg-gradient-to-b from-gray-900 to-black text-gray-200 py-12 mt-8")
      div(class="container mx-auto px-4")
        div(class="grid grid-cols-1 md:grid-cols-3 gap-12")
          //- About section
          div(class="space-y-4")
            h3(class="font-bold text-xl text-white mb-4 relative inline-block after:absolute after:bottom-0 after:left-0 after:w-12 after:h-0.5 after:bg-orange-500") About Us
            p(class="text-gray-400 leading-relaxed") We are a community-driven blog sharing the latest insights and trends in literature, culture, and lifestyle.
            a(href="/about" class="inline-flex items-center text-orange-500 hover:text-orange-400 group")
              span Learn More
              svg(xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7")

          //- Quick links
          div(class="space-y-4")
            h3(class="font-bold text-xl text-white mb-4 relative inline-block after:absolute after:bottom-0 after:left-0 after:w-12 after:h-0.5 after:bg-orange-500") Quick Links
            ul(class="space-y-3")
              each item in ['Home', 'Join Us', 'Customer Care', 'Reach Out', 'About Us']
                li
                  a(
                    href=item === 'Home' ? '/' : '#'
                    class="text-gray-400 hover:text-white transition-colors duration-200 flex items-center group"
                  )
                    svg(xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-orange-500 transform transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                      path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7")
                    span= item

          //- Newsletter section
          div(class="space-y-4")
            h3(class="font-bold text-xl text-white mb-4 relative inline-block after:absolute after:bottom-0 after:left-0 after:w-12 after:h-0.5 after:bg-orange-500") Newsletter
            p(class="text-gray-400 mb-4") Stay updated with our latest articles and news. Join our growing community!
            form(action="/subscribe" method="POST" class="space-y-3")
              div(class="relative")
                input(
                  type="email"
                  name="email"
                  placeholder="Enter your email"
                  required
                  class="w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all duration-300"
                )
              button(
                type="submit"
                class="w-full bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl"
              ) Subscribe

        //- Social media links
        div(class="flex justify-center gap-6 mt-12 mb-8")
          each social in ['facebook', 'twitter', 'instagram', 'linkedin']
            a(
              href="#"
              class="text-gray-400 hover:text-white transition-colors duration-300"
            )
              i(class=`fab fa-${social} text-xl`)

        //- Copyright
        div(class="text-center text-gray-400 border-t border-gray-800 pt-8 mt-8")
          p &copy; #{new Date().getFullYear()} SportPulse. All rights reserved.