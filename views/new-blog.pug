extends layout 

block content   
    main 
        section(class="mx-auto mt-10 w-full max-w-2xl bg-white shadow-xl rounded-lg p-8")
            h1(class="font-bold text-4xl text-center mb-6 text-orange-500") Add New Blog
            form(action="/admin/new-blog", method="post", class="space-y-6")
                fieldset(class="space-y-4")
                    legend(class="sr-only") Blog Details
                    div(class="flex flex-col")
                        label(for="title", class="font-medium text-lg text-gray-700 mb-1") Title
                        input(type="text", id="title", name="title", placeholder="Enter blog title", class="border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:border-blue-500 transition ease-in-out duration-150")
                    
                    div(class="flex flex-col")
                        label(for="author", class="font-medium text-lg text-gray-700 mb-1") Author
                        input(type="text", id="author", name="author", placeholder="Enter author's name", class="border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:border-blue-500 transition ease-in-out duration-150")

                    div(class="flex flex-col")
                        label(for="content", class="font-medium text-lg text-gray-700 mb-1") Content
                        textarea(id="content", name="content", placeholder="Write your content here..." rows="5", class="border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:border-blue-500 transition ease-in-out duration-150")

                    div(class="flex flex-col")
                        label(for="poster", class="font-medium text-lg text-gray-700 mb-1") Image Poster URL
                        input(type="text", id="poster", name="poster", placeholder="Enter image URL", class="border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:border-blue-500 transition ease-in-out duration-150")

                div(class="flex justify-center mt-6")
                    button(type="submit", class="bg-orange-500 text-white font-semibold text-lg px-6 py-3 rounded-md hover:bg-orange-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition ease-in-out duration-150") Add Blog
